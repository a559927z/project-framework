<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.chinahrd.mvc.pc.dao.common.CommonBellDao">
	<cache-ref namespace="net.chinahrd.ehcache.normal" />

	<!-- 待验证好友总数,注返转将我的好友=我，来查出别人向我发请求有那些人 -->
	<select id="findStayAuthc" parameterType="java.util.Map"
		resultType="java.lang.Integer">
		SELECT count(1) FROM `dict_coterie_firend`
		WHERE my_firend_id = #{userId} AND is_authc = 0 AND is_black = 0
	</select>
	


</mapper>