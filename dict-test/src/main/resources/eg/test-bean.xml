<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
		"
	default-lazy-init="true">

	<context:component-scan base-package="com.ks.spring.postprocess">
		<context:exclude-filter type="annotation"
			expression="org.springframework.stereotype.Controller" />
	</context:component-scan>

	<bean class="com.ks.spring.postprocess.My1"></bean>
	<bean class="com.ks.spring.postprocess.My2"></bean>
	<bean class="com.ks.spring.postprocess.My3"></bean>
	<bean class="com.ks.spring.postprocess.My4"></bean>
	<bean class="com.ks.spring.postprocess.My5"></bean>
	<bean class="com.ks.spring.postprocess.My6"></bean>

	<bean id="jackstudent" class="com.ks.dto.UserDto">
		<property name="username" value="jack"></property>
		<property name="password" value="123456"></property>
	</bean>

</beans>