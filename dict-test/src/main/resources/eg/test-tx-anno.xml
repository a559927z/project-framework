<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"

       xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
		"
       default-lazy-init="true">

    <!--原因：会把@Trancetion当成普通的bean,故没有事务管理。-->
    <!--解决：全包扫描的时候：把Service忽略：-->
    <context:component-scan base-package="com.ks.eg.tx.annotation">
        <!--<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Service" />-->
    </context:component-scan>


    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="annotationClass" value="org.springframework.stereotype.Repository"/>
        <property name="basePackage" value="com.ks.eg.tx.annotation"/>
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"/>
    </bean>

    <!-- 使用annotation定义事务 -->
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <tx:annotation-driven transaction-manager="transactionManager"/>


    <!-- 开发/测试环境 -->
    <beans profile="dev,test">
        <context:property-placeholder
                ignore-resource-not-found="true" ignore-unresolvable="true"
                location="classpath:conf/*.properties"/>
        <!-- datasource -->
        <bean id="dataSource" class="org.apache.tomcat.jdbc.pool.DataSource"
              destroy-method="close">
            <property name="driverClassName" value="${jdbc.driver}"/>
            <property name="url" value="${jdbc.url}"/>
            <property name="username" value="${jdbc.username}"/>
            <property name="password" value="${jdbc.password}"/>
            <property name="defaultAutoCommit" value="false"/>
        </bean>

        <!-- mybatis -->
        <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
            <property name="dataSource" ref="dataSource"/>
            <property name="plugins">
                <array>
                    <bean class="com.ks.eg.mybatis.pagination.PaginationPlugin">
                        <property name="properties">
                            <value>
                                 dialectClass=com.ks.eg.mybatis.pagination.MySQLDialect
                            </value>
                        </property>
                    </bean>
                </array>
            </property>
            <property name="configLocation" value="classpath:/mybatis-config.xml"/>
            <!-- 显式指定Mapper文件位置 -->
            <property name="mapperLocations" value="classpath*:*/tx-mapper.xml"/>
        </bean>
    </beans>
</beans>